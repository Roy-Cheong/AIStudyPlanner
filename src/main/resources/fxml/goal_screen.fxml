<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.GoalController"
            styleClass="root-background">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="ðŸŽ¯ Set a Study Goal" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Subject:" minWidth="70"/>
                <ComboBox fx:id="subjectBox" prefWidth="250"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Goal:" minWidth="70"/>
                <TextField fx:id="goalField" prefWidth="250"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Deadline:" minWidth="70"/>
                <DatePicker fx:id="deadlinePicker" prefWidth="250"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Notes:" minWidth="70"/>
                <TextArea fx:id="notesArea" prefWidth="250" prefHeight="80"/>
            </HBox>

            <Button text="âž• Add Goal" onAction="#handleAddGoal" prefWidth="150"/>

            <!-- Clean Section for Goals List -->
            <VBox spacing="10" alignment="TOP_CENTER">
                <Label text="ðŸ“‹ Your Goals" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <ListView fx:id="goalList" prefWidth="400" prefHeight="150"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
