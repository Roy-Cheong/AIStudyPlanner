<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.PlanController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="AI Study Plan Generator" style="-fx-font-size: 18px;" />
    <Button text="Generate Study Plan" onAction="#handleGenerate"/>
    <TextArea fx:id="outputArea" prefHeight="400" wrapText="true" editable="false"/>
</VBox>
