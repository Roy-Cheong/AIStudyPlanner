<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SubjectController"
      spacing="10" alignment="CENTER" padding="20">

    <Label text="Add a Subject" style="-fx-font-size: 18px;" />

    <TextField fx:id="nameField" promptText="Subject name" />
    <TextArea fx:id="notesArea" promptText="Notes or topics..." prefRowCount="3" />
    <Button text="Add Subject" onAction="#handleAddSubject" />

    <Label text="Subjects:" />
    <ListView fx:id="subjectList" prefHeight="200" />
</VBox>
