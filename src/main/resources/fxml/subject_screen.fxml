<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SubjectController"
            prefWidth="700" prefHeight="600">

    <!-- Title -->
    <top>
        <Label text="ðŸ“š Subjects" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20;" BorderPane.alignment="CENTER"/>
    </top>

    <!-- Center Form and List -->
    <center>
        <HBox spacing="30" alignment="CENTER" style="-fx-padding: 20;">
            <!-- Form -->
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Subject Name:"/>
                <TextField fx:id="subjectField" prefWidth="200"/>
                <Label text="Notes:"/>
                <TextArea fx:id="notesField" prefWidth="200" prefHeight="100"/>
                <Button text="Add Subject" onAction="#handleAddSubject" styleClass="nav-button"/>
            </VBox>

            <!-- Subject List -->
            <VBox spacing="10" alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
                <Label text="Your Subjects:"/>
                <ListView fx:id="subjectList" prefHeight="400" />
            </VBox>
        </HBox>
    </center>

</BorderPane>

